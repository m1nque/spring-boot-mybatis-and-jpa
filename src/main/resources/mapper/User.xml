<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.m1nque.mybatis.demo.repository.UserMapper">

    <resultMap id="UserHavingItems" type="User">
        <id column="id" property="id"/>
        <id column="account" property="account"/>
        <collection property="items" ofType="Item">
            <id column="item_id" property="id" />
            <result column="item_name" property="itemName" />
            <result column="item_type" property="itemType" />
            <result column="quantity" property="quantity" />
        </collection>
    </resultMap>

    <select id="selectUsers" parameterType="UserParam" resultType="User">
        SELECT id, account
        FROM user
        <where>
            <if test="account neq null and account neq ''">
                account like concat('%', #{account}, '%')
            </if>
        </where>
    </select>

    <select id="selectUserWithItems" parameterType="UserParam" resultMap="UserHavingItems">
        SELECT U.id as id, account, UI.item_id as item_id, item_name, item_type, quantity
        FROM user U
        LEFT JOIN user_item UI
        ON U.id = UI.user_id
        LEFT JOIN item I
        ON UI.item_id = I.id
        WHERE account = #{account}
    </select>


</mapper>